{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": false
  },
  "include": [
    "src/**/*"
  ]
}