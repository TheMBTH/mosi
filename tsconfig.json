{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2017",
    "module": "es6",
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "outDir": "lib",
    "declaration": true
  },
  "include": [
    "src/**/*",
    "__tests__/**/*"
  ]
}